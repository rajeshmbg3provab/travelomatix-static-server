{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@conf/*": [
        "src/conf/*"
      ],
      "@module/*": [
        "src/modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}